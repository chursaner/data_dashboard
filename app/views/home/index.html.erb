<div class="title-holder">
  <h1 class="text-center">Mayor's Dashboard: City of Los Angeles</h1>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 text-center">
      <p>Delivering quality customer services to every resident in Los Angeles and producing the most livable, prosperous, well run and safe City that Angelenos deserve.<a href="mailto:lilian.coral@lacity.org?Subject=Dats%20dashboard" target="_top">contact us</a>.</p>
    </div>
  </div>
</div>

<div class="row">
  <% @page.cards.each do |card| %>
    <%= render '/layouts/card', card: card %>
  <% end %>
</div>


<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <% @page.contents.each do |graph| %>
        <% if graph.class == Graph %>
          <%= render '/graphs/graph', graph: graph %>
        <% else %>
          <%= render '/external_graphs/external_graph', graph: graph %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
