<div class="title-holder">
  <h1 class="text-center">Mayor's Dashboard: Back to Basics</h1>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 text-center">
      <p>Delivering quality customer services to every resident in Los Angeles and producing the most livable, prosperous, well run and safe City that Angelenos deserve.</br>
      <a href="mailto:lilian.coral@lacity.org?Subject=Dats%20dashboard" target="_top">contact us</a>.</p>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <% @page.contents.each do |content| %>
        <% if content.content_type == "Graph" %>
          <%= render '/graphs/graph', graph: content.content %>
        <% elsif content.content_type == "Card" %>
          <%= render '/layouts/card', card: content.content %>
        <% else %>
          <%= render '/external_graphs/external_graph', graph: content.content %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
