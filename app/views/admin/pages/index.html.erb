<% provide :title, 'Pages' %>

<h1 class="text-center">Manage Pages</h1>
<h4 class="text-center">These are the pages a user will see.  They appear under the category drop downs.</h4>

<div class="row section-holder">
  <%= form_for(@page, url: '/admin/pages') do |f| %>
    <div class="form-group">
      <%= f.label('Category', class: 'padded-label') %>
      <%= f.select(:category_id, options_for_select(Category.options_for_select, @page.category_id)) %>
    </div>
    <div class="form-group">
      <%= f.label('Order', class: 'padded-label') %>
      <%= f.number_field :order, autofocus: true, placeholder: 'Order (1)', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label('Name', class: 'padded-label') %>
      <%= f.text_field :name, autofocus: true, placeholder: 'Title for DWP page', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label('Introductary text', class: 'padded-label') %>
      <%= f.text_area :intro_text, autofocus: true, placeholder: 'Short description of page...', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Page', class: 'btn btn-success btn-wide', id: 'submit_button' %>
    </div>
  <% end%>
</div>

</br>

<% @categories.each do |category| %>
  <div class="row section-holder">
    <div class="col-md-12">
      <h4><%= "#{category.name} (click to edit)" %></h4>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Order</th>
            <th>Name</th>
            <th>Intro Text</th>
            <th>Category</th>
            <th>Last Updated By</th>
            <th>Created at</th>
            <th>Updated at</th>
          </tr>
        </thead>
        <tbody>
          <% category.pages.each do |page| %>
            <tr>
              <td><%= best_in_place(page, :order, url: "/admin/pages/#{page.id}") %></td>
              <td><%= best_in_place(page, :name, url: "/admin/pages/#{page.id}") %></td>
              <td><%= best_in_place(page, :intro_text, type: :textarea, url: "/admin/pages/#{page.id}") %></td>
              <td><%= best_in_place(page, :category_id, type: :select, collection:  Category.options_for_best_in_place, url: "/admin/pages/#{page.id}") %></td>
              <td><%= page.created_by %></td>
              <td><%= page.created_at %></td>
              <td><%= page.updated_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>


<script>
  $(document).ready(function() {
    $("#page_category_id").select2({});
    jQuery(".best_in_place").best_in_place();
  });
</script>
