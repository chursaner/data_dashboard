<% provide :title, 'Categories' %>

<h1 class="text-center">Manage Pages</h1>
<h4 class="text-center">These are the pages a user will see.  They appear under the category drop downs.</h4>

<div class="row">
  <%= form_for(@page, url: '/admin/pages') do |f| %>
      <%= f.hidden_field :admin_id, value: current_admin.id %>
    <div class="form-group">
      <%= f.label('Name', class: 'padded-label') %>
      <%= f.text_field :name, autofocus: true, placeholder: 'Category name (DWP)', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label('Title', class: 'padded-label') %>
      <%= f.text_field :title, autofocus: true, placeholder: 'Title for DWP page', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label('Title', class: 'padded-label') %>
      <%= f.text_area :intro_text, autofocus: true, placeholder: 'Short description of page...', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label('Category', class: 'padded-label') %>
      <%= f.select(:category_id, options_for_select(Category.options_for_select, @page.category_id)) %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Page', class: 'btn btn-success btn-wide', id: 'submit_button' %>
    </div>
  <% end%>
</div>

</br>

<div class="row">
  <div class="col-md-12">
    <h4>Hotel Food Tags (click to edit)</h4>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Title</th>
          <th>Intro Text</th>
          <th>Category</th>
          <th>Last Updated By</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @pages.each do |page| %>
          <tr>
            <td><%= page.name %></td>
            <td><%= page.title %></td>
            <td><%= page.intro_text %></td>
            <td><%= page.category.name %></td>
            <td><%= page.created_by %></td>
            <td><%= page.created_at %></td>
            <td><%= page.updated_at %></td>
            <td>
              <%= link_to('Edit', edit_admin_page_path(page)) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<script>
  $(document).ready(function() {
    $("#page_category_id").select2({});
  });
</script>
