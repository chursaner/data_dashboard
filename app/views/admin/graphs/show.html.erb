<h1 class="text-center"><%= "Data for #{@graph.title}" %></h1>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-sm-12">

      <script type="text/javascript">
      jQuery(document).ready(function($)
      {
        if( ! $.isFunction($.fn.dxChart))
          return;
        var dataSource = [
          {dateField: new Date(1994, 2, 1), waittime: 1660450, goal: 1600000},
          {dateField: new Date(1994, 3, 1), waittime: 1506274, goal: 1600000},
          {dateField: new Date(1994, 4, 1), waittime: 1550343, goal: 1660000},
          {dateField: new Date(1995, 8, 1), waittime: 1752279, goal: 1665000},

        ];
        $("#bar-7").dxChart({
          dataSource: dataSource,
          commonSeriesSettings: {
            argumentField: "dateField"
          },
            argumentAxis: {
              argumentType: 'datetime'
              },
          series: [
            { valueField: "waittime", name: "Zoo Attendance", color: "#7c38bc" },
            { valueField: "goal", name: "Goal ", color: "#990000" },

          ],
          argumentAxis:{
            grid:{
              visible: true
            }
          },
          tooltip:{
            enabled: true
          },
          title: "<%= @graph.title %>",
          legend: {
            verticalAlignment: "bottom",
            horizontalAlignment: "center"
          },
          commonPaneSettings: {
            border:{
              visible: true,
              right: false
            }
          }
        });
      });
      </script>
      <div id="bar-7" style="height: 250px; width: 100%;"></div>
    </div>
  </div>
</div>

<div class="row">
  <% @graph.lines.each do |line| %>
    <div class= col-md-6>
      <h3 class="text-center"><%= line.title %></h3>
    </div>
  <% end %>
</div>
