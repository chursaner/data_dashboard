<h1 class="text-center"><%= "Data for #{@graph.title}" %></h1>

<%= render '/graphs/graph', graph: @graph %>

<% @graph.lines.each do |line| %>
  <div class="row">
    <div class= col-md-12>
      <h3 class="text-center"><%= line.title %></h3>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Time</th>
            <th>Value</th>
            <th>Notes</th>
            <th>Updated By</th>
            <th>Updated at</th>
          </tr>
        </thead>
        <tbody>
          <% line.points.each do |point| %>
            <tr>
              <td><%= best_in_place(point, :time, url: "/admin/points/#{point.id}") %></td>
              <td><%= best_in_place(point, :value, url: "/admin/points/#{point.id}") %></td>
              <td><%= best_in_place(point, :notes, url: "/admin/points/#{point.id}") %></td>
              <td><%= point.created_by %></td>
              <td><%= point.updated_at %></td>
            </tr>
          <% end %>
          <tr>
            <%= form_for(Point.new, url: '/admin/points') do |f| %>
              <%= f.hidden_field :line_id, value: line.id %>
              <td><%= f.date_field :time, autofocus: true, placeholder: 'Time', class: 'form-control' %></td>
              <td><%= f.text_field :value, autofocus: true, placeholder: 'Value', class: 'form-control' %></td>
              <td><%= f.text_area :notes, autofocus: true, placeholder: 'Notes', class: 'form-control' %></td>
              <td><%= f.submit 'Create Point', class: 'btn btn-success btn-wide', id: 'submit_button' %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<script>
  $(document).ready(function() {
    jQuery(".best_in_place").best_in_place();
  });
</script>
