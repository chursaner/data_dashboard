<div class="title-holder">
  <h1 class="text-center"><%= @page.name %></h1>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 text-center">
      <p><%= raw @page.intro_text %></p>
    </div>
  </div>
</div>

<div class="row">
  <% @page.cards.each do |card| %>
    <%= render '/layouts/card', card: card %>
  <% end %>
</div>

<% @page.contents.each do |graph| %>
  <% if graph.class == Graph %>
    <%= render '/graphs/graph', graph: graph %>
  <% else %>
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="col-sm-12">
          <h2 class="text-center"><%= graph.title %></h2>
          <iframe class="iframes" src=<%= graph.external_url %>></iframe>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
